{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "declaration": false,
      "stripInternal": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "module": "es2015",
      "moduleResolution": "node",
      "paths": {
        "@angular/core": ["node_modules/@angular/core"]
      },
      "rootDir": ".",
      "outDir": "dist",
      "sourceMap": true,
      "inlineSources": true,
      "target": "es5",
      "skipLibCheck": true,
      "lib": [
        "es2015", 
        "dom"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/mocks",
      "src/unit-tests"
    ],
    "compileOnSave": false,
      "atom": {
      "rewriteTsconfig": false
    },
    "files": [
      "index.ts"
    ],
    "angularCompilerOptions": {
      "strictMetadataEmit": true
    }
  }