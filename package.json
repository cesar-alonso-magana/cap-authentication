  },
  "devDependencies": {
    "@angular/compiler": "5.2.11",
    "@angular/compiler-cli": "5.2.11",
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "reflect-metadata": "^0.1.12",
    "rollup": "^0.62.0",
    "ts-jest": "^23.1.4",
    "typescript": "~2.7.2",
    "uglify-js": "^3.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
